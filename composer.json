{
    "name": "simplesamlphp/openid",
    "description": "OpenID Tools Library",
    "type": "library",
    "license": "LGPL-2.1",
    "authors": [
        {
            "name": "Marko Ivančić",
            "email": "cicnavi@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "SimpleSAML\\OpenID\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimpleSAML\\Test\\OpenID\\": "tests/src/"
        }
    },
    "require": {
        "php": "^8.2",
        "ext-filter": "*",

        "guzzlehttp/guzzle": "^7.8",
        "psr/http-client": "^1",
        "psr/http-message": "^2",
        "psr/log": "^3",
        "psr/simple-cache": "^3",
        "web-token/jwt-library": "^3.4 || ^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10",
        "squizlabs/php_codesniffer": "^3",
        "vimeo/psalm": "^5",
        "rector/rector": "^1 || ^2",
        "simplesamlphp/simplesamlphp-test-framework": "^1"
    },
    "config": {
        "sort-packages": true,
        "cache-dir": "build/composer",
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "pre-commit": [
            "vendor/bin/phpcs -p",
            "vendor/bin/psalm --no-cache",
            "vendor/bin/phpunit --no-coverage"
        ]
    }
}
